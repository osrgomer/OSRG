RewriteEngine On
RewriteBase /

# Pretty URLs for OSRG Connect
RewriteRule ^home/?$ index.php [L]
RewriteRule ^feed/?$ index.php [L]
RewriteRule ^login/?$ login.php [L]
RewriteRule ^register/?$ register.php [L]
RewriteRule ^logout/?$ logout.php [L]
RewriteRule ^friends/?$ friends.php [L]
RewriteRule ^reels/?$ reels.php [L]
RewriteRule ^messages/?$ messages.php [L]
RewriteRule ^profile/?$ profile.php [L]
RewriteRule ^profile/([0-9]+)/?$ profile.php?id=$1 [L]
RewriteRule ^settings/?$ settings.php [L]
RewriteRule ^admin/?$ admin.php [L]
RewriteRule ^users/?$ users.php [L]
RewriteRule ^find-friends/?$ users.php [L]
RewriteRule ^forgot-password/?$ forgot_password.php [L]
RewriteRule ^reset-password/?$ reset_password.php [L]

# PHP configuration
php_value upload_max_filesize 15M
php_value post_max_size 20M
php_value max_execution_time 120
php_value max_input_time 120
php_value memory_limit 256M

# Static files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|ico|svg|mp4|mp3|pdf|zip)$