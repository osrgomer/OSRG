RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Pretty URLs
RewriteRule ^home/?$ home.php [L]
RewriteRule ^reels/?$ reels.php [L]
RewriteRule ^find-friends/?$ find_friends.php [L]
RewriteRule ^friends/?$ friends.php [L]
RewriteRule ^messages/?$ messages.php [L]
RewriteRule ^profile/?$ profile.php [L]
RewriteRule ^settings/?$ settings.php [L]
RewriteRule ^admin/?$ admin.php [L]
RewriteRule ^login/?$ login.php [L]
RewriteRule ^register/?$ register.php [L]
RewriteRule ^logout/?$ logout.php [L]
 
# Map /home to index.php (there is no home.php in this project)
RewriteRule ^home/?$ index.php [L]

# Fallback: route anything not matching a real file to index.php (front controller)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [L,QSA]